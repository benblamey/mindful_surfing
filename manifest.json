{
  "manifest_version": 2,
  
  "name": "Mindful Surfing",
  "description": "Helps you avoid mindlessly surfing the web for extended periods of time.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  
  "permissions": [
    "activeTab",
	"alarms",
	"notifications",
	"windows",
	"activeTab",
	"tabs",
	"storage"
  ],
  
  "options_page": "options.html",
  
  "background": {
    "scripts": ["core.js", "backgroundPage.js"],
    "persistent": true
  }
  
}